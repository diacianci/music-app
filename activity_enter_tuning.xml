<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enter_tuning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.diaci.tunami.enterTuning">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Tuning Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tuningNameTextView"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_above="@+id/editText4"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_toLeftOf="@+id/editText2"
                android:layout_toStartOf="@+id/editText2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/tuningNameEditText"
                android:layout_below="@+id/editText2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Low E String:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lowETextView"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_above="@+id/editText4"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_toLeftOf="@+id/editText2"
                android:layout_toStartOf="@+id/editText2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lowEEditText"
                android:layout_below="@+id/editText2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="A String:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/aTextView"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_above="@+id/editText4"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_toLeftOf="@+id/editText2"
                android:layout_toStartOf="@+id/editText2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/aEditText"
                android:layout_below="@+id/editText2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="D String:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dTextView"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_above="@+id/editText4"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_toLeftOf="@+id/editText2"
                android:layout_toStartOf="@+id/editText2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/dEditText"
                android:layout_below="@+id/editText2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="G String:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText4"
                android:layout_alignLeft="@+id/textViewlowETextView"
                android:layout_alignStart="@+id/textViewlowETextView"
                android:id="@+id/gTextView"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_below="@+id/textViewlowETextView"
                android:layout_toLeftOf="@+id/editText3"
                android:layout_toStartOf="@+id/editText3"
                android:gravity="center"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/gEditText"
                android:layout_below="@+id/editText3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText3"
                android:layout_alignStart="@+id/editText3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="B String:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText5"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignEnd="@+id/textView4"
                android:id="@+id/bTextView"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_below="@+id/editText4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:gravity="center"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/bEditText"
                android:layout_below="@+id/editText4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText4"
                android:layout_alignStart="@+id/editText4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="High E String:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/highETextView"
                android:gravity="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_above="@+id/editText4"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_toLeftOf="@+id/editText2"
                android:layout_toStartOf="@+id/editText2"
                android:layout_weight="1" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/highEEditText"
                android:layout_below="@+id/editText2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="73dp"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Clear Strings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clearStringsButton"
            android:layout_weight="1"
            android:onClick="onClearStringsBtnClicked" />

        <Button
            android:text="Add Tuning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addTuningButton"
            android:layout_weight="1"
            android:onClick="onAddTuningBtnClicked" />

    </LinearLayout>

</RelativeLayout>
